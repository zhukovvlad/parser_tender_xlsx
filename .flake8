[flake8]
max-line-length = 88
extend-ignore = E203, W503
per-file-ignores = 
    __init__.py:F401
    */tests/*:S101
max-complexity = 10
import-order-style = google
application-import-names = app

# Security checks
select = E,W,F,C,B,S

exclude = 
    .git,
    __pycache__,
    .tox,
    .eggs,
    *.egg,
    build,
    dist,
    .venv,
    venv