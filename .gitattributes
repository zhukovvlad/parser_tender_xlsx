# Auto detect text files and perform LF normalization
* text=auto

# Ensure Python files are always UTF-8
*.py text eol=lf encoding=utf-8

# Ensure config files are UTF-8
*.md text eol=lf encoding=utf-8
*.json text eol=lf encoding=utf-8
*.yml text eol=lf encoding=utf-8
*.yaml text eol=lf encoding=utf-8
*.toml text eol=lf encoding=utf-8
*.ini text eol=lf encoding=utf-8
*.cfg text eol=lf encoding=utf-8
.env* text eol=lf encoding=utf-8

# Binary files
*.xlsx binary
*.xls binary
*.pdf binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.tar binary
*.gz binary

# Ensure shell scripts use LF
*.sh text eol=lf
Makefile text eol=lf
